---
import type { ImageData } from "src/types";

interface Props {
  images: ImageData[];
}

const { images } = Astro.props;
---

{
  images.length > 0 && (
    <div class="grid place-content-center gap-6 lg:grid-flow-col lg:gap-8">
      {images.map(({ src, alt, width, height, caption }) => (
        <div class="flex flex-col items-center gap-2">
          <img {src} {alt} {width} {height} />
            {caption && (
              <p class=`text-xs dark:text-slate-200`>{caption}</p>
            )}
        </div>
      ))}
    </div>
  )
}
