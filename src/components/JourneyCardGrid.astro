---
import type { JourneyCardData } from "src/types";
import JourneyCard from "./JourneyCard.astro";

interface Props {
  journeys: JourneyCardData[];
}

const { journeys } = Astro.props;
---

{
  journeys.length > 0 && (
    <div class="grid gap-6 lg:grid-cols-2 lg:gap-8">
      {journeys.map(({ title, description, buttonText, href }) => (
        <JourneyCard {title} {description} {buttonText} {href} />
      ))}
    </div>
  )
}
