---
import Navbar from "@components/Navbar.astro";
import "@styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <!-- TODO: make favicon <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{`Journey - ${title}`}</title>
  </head>

  <body>
    <div class="flex flex-col space-y-14 lg:space-y-20">
      <div>
        <Navbar />
      </div>

      <div class="p-4">
        <slot />
      </div>
    </div>
  </body>
</html>
